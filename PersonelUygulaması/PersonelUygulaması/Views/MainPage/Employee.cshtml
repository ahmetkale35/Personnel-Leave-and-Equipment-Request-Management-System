@using PersonelUygulaması.Models;
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

 <style>
    .card {
        border-radius: 15px;
        background-color: #f5f5f5;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2), 0 10px 30px rgba(0, 0, 0, 0.15);
        padding: 17px;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        text-align: center;
        height: 100%;
    }

    .btn {
        margin-top: auto;
        align-self: center;
    }

    .card {
        border-radius: 15px;
        background-color: #fafafa;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        padding: 20px;
        transition: 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            transform: translateY(-5px);
        }

    .btn {
        min-width: 140px;
        border-radius: 15px;
        font-weight: 700;
    }

    .card-title {
        font-weight: 700;
    }

    .card-text {
        line-height: 1.5;
    }

    .row > .col {
        margin-bottom: 1.5rem;
    }

    .welcome-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #2c3e50;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.1);
        margin-bottom: 10px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .welcome-title .username {
            color: #007bff;
            font-weight: 700;
        }

    .welcome-subtitle {
        font-size: 1.2rem;
        color: #000000;
        font-style: italic;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin-top: 5px;
    }


</style> 

<div class="text-center mb-5">
    <h2 class="welcome-title">👷‍♂️ Hoş Geldiniz, <span class="username">@User.Identity.Name</span></h2>
    <p class="welcome-subtitle">Lütfen yapmak istediğiniz işlemi seçin.</p>
</div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">

        <div class="col">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">📅 İzin Talebi Oluştur</h5>
                    <p class="card-text">Yeni bir izin talebi göndermek için tıklayın.</p>
                    <a href="/Leave/Create" class="btn btn-primary">Talep Oluştur</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title">📋 İzin Taleplerim</h5>
                    <p class="card-text">Daha önce gönderdiğiniz tüm izin taleplerini görüntüleyin.</p>
                    <a href="/Leave/MyRequests" class="btn btn-success">Taleplerim</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">🧰 Ekipman Talebi Oluştur</h5>
                    <p class="card-text">Yeni ekipman ihtiyacınızı bildirmek için tıklayın.</p>
                    <a href="/Equipment/Create" class="btn btn-warning text-white">Talep Oluştur</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card border-info h-100">
                <div class="card-body">
                    <h5 class="card-title">🔧 Ekipman Taleplerim</h5>
                    <p class="card-text">Önceki ekipman taleplerinizi görüntüleyin.</p>
                    <a href="/Equipment/MyRequests" class="btn btn-info text-white">Taleplerim</a>
                </div>
            </div>
        </div>

    </div>
    
    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <div class="card border-primary text-center">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-around text-center">
                        <div class="mx-3">
                            <div class="fs-4">📝</div>
                            <h6 class="card-title mb-1">Kalan İzin Gün Sayısı</h6>
                            <p class="card-text fs-4 mb-0">@ViewBag.KalanIzinGunSayisi</p>
                        </div>
                        <div class="mx-3">
                            <div class="fs-4">⏳</div>
                            <h6 class="card-title mb-1">Bekleyen Talepler</h6>
                            <p class="card-text fs-4 mb-0">@ViewBag.BekleyenSayisi</p>
                        </div>
                        <div class="mx-3">
                            <div class="fs-4">✅</div>
                            <h6 class="card-title mb-1">Onaylanan Talepler</h6>
                            <p class="card-text fs-4 mb-0">@ViewBag.OnaylananSayisi</p>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
