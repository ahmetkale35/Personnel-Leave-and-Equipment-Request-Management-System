@{
    ViewData["Title"] = "Login";

}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center mx-auto w-75 rounded-pill shadow-sm" style="max-width: 400px;">

        <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
    </div>
}

<style>
    .login-title {
        font-size: 2rem;
        font-weight: 700;
        color: #004aad;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
    }


    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #d9e2ec;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .bg-gradient-custom {
        min-height: 100vh;
        background-color: #d9e2ec;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .card {
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        border-radius: 20px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

        .card:hover {
            box-shadow: 0 12px 30px rgba(0,0,0,0.25);
            transform: translateY(-5px);
        }

    h3 {
        font-weight: 700;
        color: #0d6efd;
    }

    label.form-label {
        font-weight: 600;
        color: #333;
        transition: color 0.3s ease;
    }

    input.form-control {
        border-radius: 50px;
        padding: 15px 20px;
        font-size: 1.1rem;
        border: 2px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: none;
    }

        input.form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.4);
            outline: none;
        }

    .invalid-feedback {
        font-size: 0.9rem;
        font-weight: 500;
    }

    button.btn-primary {
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.2rem;
        padding: 12px 0;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(13,110,253,0.3);
    }

        button.btn-primary:hover {
            background-color: #004aad;
            box-shadow: 0 6px 15px rgba(0, 74, 173, 0.6);
        }


    .alert i {
        font-size: 1.3rem;
        vertical-align: middle;
    }

</style>




<div class="row justify-content-center align-items-center min-vh-100 bg-gradient-custom">
    <div class="col-md-5 col-sm-8 col-11">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="card-body p-5">

                <h3 class="login-title text-center mb-5">🧑‍💼 Personel Giriş</h3>



                <form method="post" asp-action="Login" class="needs-validation" novalidate>
                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold">Email</label>
                        <input type="email" class="form-control form-control-lg rounded-pill" name="Email" id="email" placeholder="Email girin" required />
                        <div class="invalid-feedback ps-3">
                            Lütfen geçerli bir email girin.
                        </div>
                    </div>
                    <div class="mb-5">
                        <label for="parola" class="form-label fw-semibold">Parola</label>
                        <input type="password" class="form-control form-control-lg rounded-pill" name="ParolaHash" id="parola" placeholder="Parolanızı girin" required />
                        <div class="invalid-feedback ps-3">
                            Parola zorunludur.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-semibold shadow-sm">
                        Giriş Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
